<div align=center>
<%= form_with model: holiday do |form| %>
      <%= form.label :name %>
      <br>
      <%= form.text_field :name %>
    <br>
    <% holiday.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
        <% end %>
        <br>
      <%= form.label :date %>
      <br>
  <%= form.text_field :date, "data-provide" => 'datepicker' %>
    <br>
    <% holiday.errors.full_messages_for(:date).each do |message| %>
        <div><%= message %></div>
        <% end %>
        <br>
      <%= form.submit %>
  <% end %>
  </div>