<%= form_with(model: @department, id: "my_form")do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <%= render "error", department: @department%><br>
  <div>
  <%= form.submit %>
<% end %>
<script type='text/javascript'>
  $( document ).ready(function() {
  FormValidation.validateForm();
});
</script>
